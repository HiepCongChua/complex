{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "hieple/multi-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "hieple/multi-server",
      "hostname": "api",
      "essential": false,
      "memory": 128,
      "environment": [
        {
          "name": "REDIS_HOST",
          "value": "multi-docker-redis.kupig7.0001.apse1.cache.amazonaws.com"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "PG_USER",
          "value": "postgres"
        },
        {
          "name": "PG_HOST",
          "value": "multi-docker-postgres.cdsxvqegw81j.ap-southeast-1.rds.amazonaws.com"
        },
        {
          "name": "PG_DATABASE",
          "value": "fibvalues"
        },
        {
          "name": "PG_PASSWORD",
          "value": "postgrespassword"
        },
        {
          "name": "PG_PORT",
          "value": "5432"
        }
      ]
    },
    {
      "name": "worker",
      "image": "hieple/multi-worker",
      "essential": false,
      "memory": 128,
      "environment": [
        {
          "name": "REDIS_HOST",
          "value": "multi-docker-redis.kupig7.0001.apse1.cache.amazonaws.com"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "hieple/multi-nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 3050,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"]
    }
  ]
}
