{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "hieple/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "hieple/multi-worker",
            "essential": false,
            "memory": 128
        },
               {
            "name": "server",
            "image": "hieple/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        } ,
        {
            "name": "nginx",
            "image": "hieple/multi-nginx",
            "essential": true,
            
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "client",
                "server"
            ],
            "memory": 128
        }

    ]
}